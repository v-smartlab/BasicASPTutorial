<!DOCTYPE html>
<html lang="en">
<style>
    .divlabel {
        padding-right: 0.25rem !important;
        height: 32px;
    }

    .stylelabel {
        padding-right: 0.25rem !important;
        margin-top: 8px;
    }

    .divText {
        padding-left: 0 !important;
        padding-right: 0 !important;
        height: 32px;
    }

    .styleText {
        padding-left: 0.25rem !important;
        padding-right: 0.25rem !important;
        margin-top: 2px;
        height: 28px;
    }

    .styleSelect {
        padding-top: 0 !important;
        padding-bottom: 0 !important;
        padding-left: 0.5rem !important;
        padding-right: 0.25rem !important;
        margin-top: 2px;
        height: 28px;
    }

    input:invalid {
        border: 2px solid red;
    }

        input:invalid + span {
            color: red;
            font-weight: bold;
        }
</style>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BasicASPTutorial.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/jquery-ui-1.13.2.custom/jquery-ui.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/lib/jquery-ui-1.13.2.custom/jquery-ui.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/lib/jquery-ui-1.13.2.custom/jquery-ui.structure.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/lib/jquery-ui-1.13.2.custom/jquery-ui.structure.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/lib/jquery-ui-1.13.2.custom/jquery-ui.theme.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/lib/jquery-ui-1.13.2.custom/jquery-ui.theme.min.css" rel="stylesheet" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Student" asp-action="Index">ระบบจัดการคะแนนสอบ</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Student" asp-action="Index">หน้าแรก</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Student" asp-action="Create">บันทึกข้อมูล</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">

        <div class="container">
            &copy; 2566 : V-Smart.com
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.js"></script>
    <script src="https://code.jquery.com/ui/1.13.2/jquery-ui.js"></script>
 
    @await RenderSectionAsync("Scripts", required: false)
    <script src="~/js/autonumeric.js"></script>
    <script type="text/javascript">
        $('.autoNumberIntNoSeparate').autoNumeric('init', { vMax: 9999999999, vMin: -9999999999, wEmpty: '0.00', mDec: 0, aSep: '' });
        $('.autoNumberInt').autoNumeric('init', { vMax: 9999999999, vMin: -9999999999, wEmpty: '0.00', mDec: 0 });
        $('.autoNumber3Int').autoNumeric('init', { vMax: 999, vMin: 0.00, wEmpty: '0.00', mDec: 0 });
        $('.autoNumber2Dec').autoNumeric('init', { vMax: 999999999999, vMin: 0.00, wEmpty: '0.00', mDec: 2 });
        $('.autoNumber2Int2Dec').autoNumeric('init', { vMax: 99, vMin: 0.00, wEmpty: '0.00', mDec: 2 });
    </script>
    <script src="~/scripts/globalsetting.js"></script>
    <script src="~/scripts/genreports.js"></script>
</body>
</html>
