@model Student;
@{
    ViewData["Title"] = "บันทึกข้อมูล2";
}

<h1 class="text-center">บันทึกคะแนนสอบ2 @ViewBag.abc</h1>
<form method="POST" asp-controller="Student" asp-action="Create2">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input type="text" asp-for="Name" autocomplete='off' class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Score"></label>
        <input type="number" asp-for="Score" autocomplete='off' class="form-control" />
        <span asp-validation-for="Score" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DateUpdate"></label>
        <input type="text" asp-for="DateUpdate" autocomplete='off' class="form-control datepicker" />
        
    </div>
    <button type="submit" class="btn btn-primary my-2">บันทึก</button>
</form>
